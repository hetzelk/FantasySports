@{
    ViewBag.Title = "RotoSports Home Page";
}

<div class="well well-lg">
    <h1 style="font-size:6em;" class="SportsJerseyFont">@ViewBag.PlayerName</h1>
    <h4 class="hidden">@ViewBag.PlayerID</h4>
</div>
<div class="row">
    <div class="alert alert-info col-md-3" role="alert">
        <p style="font-size:2em;">Player Details</p>
        @foreach (string line in ViewBag.PlayerInfoList)
        {

            string[] bolded = line.Split(':');
            <p><span class="bold">@bolded[0]</span>&nbsp;&nbsp;:&nbsp;&nbsp;@bolded[1]</p>

        }
    </div>



    @if (ViewBag.Injury == "true")
    {
        <div class="alert alert-danger col-md-offset-1 col-md-4" role="alert">
            <p style="font-size:2em;">Injury Report</p>
            @foreach (string line in ViewBag.InjuryList)
            {
                string[] bolded = line.Split(':');
                <p><span class="bold">@bolded[0]</span>&nbsp;&nbsp;:&nbsp;&nbsp;@bolded[1]</p>
            }
        </div>
    }
</div>
<div class="row">
    <div class="alert alert-info col-md-3" role="alert">
        <p style="font-size:1.5em;">Player Details</p>
        <div>
            @foreach (string detail in ViewBag.Projections)
            {
                string[] bolded = detail.Split(':');
                <p><span class="bold">@bolded[0]</span>&nbsp;&nbsp;:&nbsp;&nbsp;@bolded[1]</p>
            }
        </div>
    </div>
    <div class="alert alert-warning  col-md-offset-1 col-md-3" role="alert">
        <p style="font-size:1.5em;">Opponent Details</p>
        <div>
            @foreach (string detail in ViewBag.OpponentDetails)
            {
                string[] bolded = detail.Split(':');
                <p><span class="bold">@bolded[0]</span>&nbsp;&nbsp;:&nbsp;&nbsp;@bolded[1]</p>
            }
        </div>
    </div>
    <div class="alert alert-info col-md-3  col-md-offset-1" role="alert">
        <p style="font-size:1.5em;">Shooting Stats</p>
        <div>
            @foreach (string detail in ViewBag.ShootingsStats)
            {
                string[] bolded = detail.Split(':');
                <p><span class="bold">@bolded[0]</span>&nbsp;&nbsp;:&nbsp;&nbsp;@bolded[1]</p>
            }
        </div>
    </div>

</div>