@model RotoSports.Models.CSVFiles

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CSVFiles</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10 hidden">
                @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.UserId } })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @Placeholder = "Enter a title for this file." } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10 hidden">
                @Html.EditorFor(model => model.Sport, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.SportName } })
                @Html.ValidationMessageFor(model => model.Sport, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "form-control", @Placeholder = "My details/notes for this file." } })
                @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.File, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.File, new { @class = "form-control", @Placeholder = "Copy and Paste the CSV File here" })
                @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <p>You must input the correct format.</p>
                <p>2015, 2016, 2017.</p>
                <p>OCT, NOV, DEC, JAN, FEB, MAR, APR.</p>
                <p>1, 2, 3...10, 11, 12..29, 30, 31. </p>
                <p>CORRECT: 1, 2, 3, 4, 5, 6, 7, 8, 9</p>
                <p>INCORRECT: 01, 02, 03, 04, 05, 06, 07, 08, 09.</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GameDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GameDate, new { htmlAttributes = new { @class = "form-control", @Placeholder = "Format: 2016-MAR-2" } })
                @Html.ValidationMessageFor(model => model.GameDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
